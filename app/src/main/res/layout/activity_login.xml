<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:text="Login"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/Email_field"
        android:layout_width="324dp"
        android:layout_height="34dp"
        android:layout_marginTop="39dp"
        android:background="@drawable/field_text_input"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_email" />

        <EditText
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:background="null"
            android:hint="Email"
            android:padding="0dp"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Password_field"
        android:layout_width="324dp"
        android:layout_height="34dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/field_text_input"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/Email_field"
        app:layout_constraintStart_toStartOf="@+id/Email_field"
        app:layout_constraintTop_toBottomOf="@+id/Email_field">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_lock" />

        <EditText
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:background="null"
            android:hint="Password"
            android:padding="0dp"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="324dp"
        android:layout_height="34dp"
        android:background="@drawable/btn_login_signup"
        android:padding="0dp"
        android:text="Log in "
        android:layout_marginTop="39dp"
        app:layout_constraintEnd_toEndOf="@+id/Password_field"
        app:layout_constraintStart_toStartOf="@+id/Password_field"
        app:layout_constraintTop_toBottomOf="@+id/Password_field" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="39dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/btn_login"
        app:layout_constraintStart_toStartOf="@+id/btn_login"
        app:layout_constraintTop_toBottomOf="@+id/btn_login">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--- log in with ---" />

        <ImageButton
            android:layout_marginTop="9dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/google" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donâ€™t have an account?" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>