<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="353dp"
    android:layout_height="147dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="10dp"
    android:layout_marginBottom="12dp"

    >

    <LinearLayout
        android:layout_width="353dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="13dp"
                android:src="@drawable/dummy_photo" />

            <ImageView
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_margin="5dp"
                android:src="@drawable/halal" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Restaurant_name"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Restoran Murah Meriah"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Address_restaurant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Restaurant_name"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="5dp"
                    android:text="Raflesia Hills No.50 Jalan ..."
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/start_rate"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/Address_restaurant"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/ic_star_rate" />

                <TextView
                    android:id="@+id/rate_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/start_rate"
                    android:layout_alignBottom="@+id/start_rate"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="1dp"
                    android:layout_toEndOf="@+id/start_rate"
                    android:text="4.2" />

                <RelativeLayout
                    android:layout_marginTop="7dp"
                    android:layout_width="56dp"
                    android:layout_height="18dp"
                    android:padding="0dp"
                    android:layout_below="@+id/rate_restaurant"
                    android:background="@drawable/rounded_ditance">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="2KM"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </RelativeLayout>

            <ImageButton
                android:id="@+id/button_favorite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/ic_favorite"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="14dp"/>
        </FrameLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>