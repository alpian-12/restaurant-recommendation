<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout"
    android:paddingBottom="52dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="29dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/circleImageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/paragraph_text"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        app:layout_constraintBottom_toBottomOf="@+id/circleImageView"
        app:layout_constraintStart_toEndOf="@+id/circleImageView"
        app:layout_constraintTop_toTopOf="@+id/circleImageView" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:paddingTop="10dp"
        android:stepSize="0.5"
        app:layout_constraintStart_toStartOf="@+id/circleImageView"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView" />


    <TextView

        android:id="@+id/textView2"
        style="@style/secondary_text_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/write_your_experience"
        app:layout_constraintStart_toStartOf="@+id/ratingBar"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <EditText
            android:paddingTop="10dp"
            android:gravity="top|start"
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_search_view"
            style="@style/text_input"
            android:hint="@string/share_your_experience_at_this_place"
            android:paddingHorizontal="32dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        style="@style/secondary_text_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/is_this_restaurant_halal"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:paddingTop="10dp"/>

    <RadioGroup
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RadioButton
            android:id="@+id/halal"
            style="@style/secondary_text_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/halal_checkded_selector"
            android:button="@null"
            android:paddingHorizontal="20dp"
            android:paddingVertical="4dp"
            android:text="Halal"
            android:textColor="@drawable/halal_selector_text" />

        <RadioButton
            android:layout_marginLeft="10dp"
            android:id="@+id/Nonhalal"
            style="@style/secondary_text_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nonhalal_check_selector"
            android:button="@null"
            android:paddingHorizontal="20dp"
            android:paddingVertical="4dp"
            android:text="Non Halal"
            android:textColor="@drawable/nonhalal_selector_text" />

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>